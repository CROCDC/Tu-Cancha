<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutContenedor_fragmentopcioncompartirimagen"
    android:layout_width="match_parent"
    android:elevation="6dp"
    android:layout_height="match_parent"
    android:background="@color/negroTransparente"
    tools:context=".View.Fragments.OpcionCompartirImagenFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewContenedorOpcionesCompartir_fragmentingresarnombredelacancha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_margin="2dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout

                android:id="@+id/linearLayoutContenedorConQR_fragmentopcioncompartirimagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/qr" />

                <ImageView
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imageViewButtonInformacionConQR_fragmentopcioncompartirimagen"
                    android:src="@drawable/information"
                    android:layout_width="34dp"
                    android:layout_height="34dp" />

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/negro"
                    android:text="@string/compartir_con_codigo_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:padding="10dp"
                android:textColor="@color/negro"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="@string/o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearLayoutContendorSinQR_fragmentopcioncompartirimagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/disableqr"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />


                <ImageView
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imageViewButtonInformacionSinQR_fragmentopcioncompartirimagen"
                    android:src="@drawable/information"
                    android:layout_width="34dp"
                    android:layout_height="34dp" />

                <TextView
                    android:textSize="15sp"
                    android:lines="1"
                    android:text="@string/compatir_con_codigo_sin_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <ProgressBar
        android:progressTint="@color/negro"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar_fragmentopcioncompartirimagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>